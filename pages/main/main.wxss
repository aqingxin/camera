/* pages/main/main.wxss */
page {
  overflow: hidden;
}
.container {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background: #010101;
}
.main-img {
  position: absolute;
}
.sticker {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 400rpx;
  background: #010101;
  transition: .3s;
}
.sticker-arrow {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  /* margin-left: -50%; */
  width: 60rpx;
  height: 60rpx;
  transition: .3s;
}
.sticker-hide {
  bottom: -320rpx;
}
.sticker-main {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 60rpx;
}
.sticker-main image {
  width: 120rpx;
  height: 120rpx;
}
.touchActive {
  border:  1px dashed #fff;
}
.img-content {
  position: absolute;
}
.close {
  color: greenyellow;
  width: 18px;
  height: 18px;
  position: absolute;
  z-index: 99;
  left: -9px;
  top: -9px;
}
.operation {
  color: greenyellow;
  width: 18px;
  height: 18px;
  position: absolute;
  z-index: 99;
  right: -9px;
  bottom: -9px;
}
.save-btn {
  position: absolute;
  bottom: 240rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FD4B95;
  border-radius: 50%;
}
.save-btn image {
  width: 70%;
  height: 50%;
}
.mycanvas {
  position: absolute;
  top: -100000vh;
}